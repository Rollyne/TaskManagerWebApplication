
@{
    ViewData["Title"] = "Add new task";
}
<h1>Create a new task</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">@Html.ValidationMessage("CreateFailed")</div>
}
@using (Html.BeginForm("Create", "Tasks", FormMethod.Post))
{
    @model Data.Entities.Entities.Task

    @Html.HiddenFor(m => m.Id, new { required = true })

    <div class="form-group">
        @Html.LabelFor(m => m.Header)
        @Html.TextBoxFor(m => m.Header, new { @class = "form-control", placeholder = "Proper header..", required = true })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Detailed description.." })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RequiredHours)
        @Html.TextBoxFor(m => m.RequiredHours, new { @class = "form-control", placeholder = "Detailed description.." })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ExecutitiveId)
        @Html.TextBoxFor(m => m.ExecutitiveId, new { @class = "form-control", placeholder = "Detailed description.." })
    </div>

    <input type="submit" class="btn btn-primary" value="Create" />
}
<a asp-controller="Tasks" asp-action="Index"><button class="btn btn-warning">Cancel</button></a>