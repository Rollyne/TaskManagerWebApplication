
@model System.Collections.Generic.ICollection<Data.Entities.Entities.Comment>
@foreach(var comment in Model)
{
    if (comment.AuthorId == TaskManagerASP.Models.AuthenticationManager.GetLoggedUser(Context).Id)
    {
        @Html.ActionLink("", "Edit", "Comments", new { id = comment.Id}, new { @class = "glyphicon glyphicon-pencil"})
        @Html.ActionLink("", "Delete", "Comments", new {id = comment.Id}, new {@class = "glyphicon glyphicon-trash"})
    }
    @Html.DisplayFor(m => comment.Body, new { @class="well"})
}

