
@{
    ViewData["Title"] = "Edit user";
    @model Data.Entities.Entities.User
}
<h1>Edit user</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">@Html.ValidationMessage("EditFailed")</div>
}

@using (Html.BeginForm("Edit", "Users", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new {@class = "sr-only"})
        @Html.EditorFor(m => m.UserName, new {@class = "form-control", style = "margin:auto", placeholder = "Username", required = true, autofocus = true})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new {@class = "sr-only"})
        @Html.EditorFor(m => m.Password, new {type = "password", @class = "form-control", style = "margin:auto", placeholder = "Password", required = true})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, "First name", new {@class = "sr-only"})
        @Html.EditorFor(m => m.FirstName, new {@class = "form-control", style = "margin:auto", placeholder = "First name", required = true})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, "Last name", new {@class = "sr-only"})
        @Html.EditorFor(m => m.LastName, new {@class = "form-control", style = "margin:auto", placeholder = "Last name", required = true})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsAdmin, "Is admin")
        @Html.EditorFor(m => m.IsAdmin)
    </div>
    <input type="submit" class="btn btn-primary" value="Create"/>
}
@Html.ActionLink("Cancel", "Index", "Users", new { type = "button", @class = "btn btn-warning" })